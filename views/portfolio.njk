{% extends "layout.njk"%}

{%block head%}
<title> Portfolio - Thales Santana</title>
{%endblock%}

{%block content %}
    <div id="wrapper" >
        <h1>Aulas</h1>
    </div>
    
        <section class="cards">
            {%for item in items%}
                <div class="card" id="{{item.id}}">
                    <div class="card-img_container {{'featured-wrapper'if item.featured}}">
                        <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt='Imagem de {{item.title}}'>
                        {%if item.featured%}
                            <div class="featured">Featured</div>
                        {% endif%}
                    </div>
                    <div class="card_content">
                        <p>{{item.title}}</p>
                    </div>
                    <div class="card_info">
                        <p>57 min</p>
                        <p class="card_price">{{item.price}}</p>
                    </div>
                </div>
            {%endfor%}
        </section>
    </div>
    <script src="/script.js"></script>
{%endblock%}